<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/approve_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CA3D3"
        android:text="Approve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/approve_or_deny_name"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/approve_or_deny_client_name"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Order Made By:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/approve_or_deny_name"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Meal: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/approve_or_deny_client_name"
        app:layout_constraintVertical_bias="0.018" />

    <Button
        android:id="@+id/deny_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CA3D3"
        android:text="Deny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toEndOf="@+id/approve_button"
        app:layout_constraintTop_toBottomOf="@+id/approve_or_deny_name"
        app:layout_constraintVertical_bias="0.089" />
</androidx.constraintlayout.widget.ConstraintLayout>