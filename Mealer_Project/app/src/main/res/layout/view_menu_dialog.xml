<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#4CA3D3">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="265dp"
            android:layout_height="112dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            app:srcCompat="@drawable/food_platter__1_" />

        <TableLayout
            android:layout_width="386dp"
            android:layout_height="111dp"
            android:layout_marginTop="144dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-48dp">

            <TableRow
                android:layout_width="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Meal Name:"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Ingredients:"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/allergens"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Allergens:"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Meal Type: "
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"></TextView>

            </TableRow>

            <TableRow
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Price: "
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cuisine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Cuisine: "
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"></TextView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mealdescription"
                    android:layout_width="227dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="Meal Description:"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="136dp"
            android:layout_height="50dp"
            android:backgroundTint="#FEFFFF"
            android:text="Delete"
            android:textColor="#4CA3D3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.885"></Button>

        <Button
            android:id="@+id/buttonUpdateOffered"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:backgroundTint="#FEFFFF"
            android:text="Add"
            android:textSize="11dp"
            android:textColor="#4CA3D3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.742" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
